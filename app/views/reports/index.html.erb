<h1> Article Listing page</h1>

<div class="container">
	<table id="reports" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
    <tr>
        <th>Date</th>
        <th>App</th>
        <th>Country</th>
        <th>Connection</th>
        <th>Platform</th>
        <th>Ad Revenue</th>
        <th>Impressions</th>
    </tr> 
    </thead>

    <tbody>
        <% @reports.each do |repo| %>
            <tr>
                <td><%=repo.date%></td>
                <td><%=repo.app%></td>
                <td><%=repo.country%></td>
                <td><%=repo.platform%></td>
                <td><%=repo.connection%></td>
                <td><%=repo.ad_revenue%></td>
                <td><%=repo.impressions%></td>
            </tr>
        <% end %>
    </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#reports').DataTable();
  });
</script>